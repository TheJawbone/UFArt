@model ViewModel

<div class="p-3 w-100">
    <h1>@Model.TextRepository.GetTranslatedValue("about_header", Context)</h1>
    <div class="wrapper-image-about">
        <img class="image-about" src="@Model.TextRepository.GetTranslatedValue("about_image_uri", Context)" />
    </div>
    <div class="d-about-text-wrapper">
        @foreach (string paragraph in @Model.TextRepository.GetTranslatedValue("about_text", Context).Split("\r\n"))
        {
            <p class="text-justify">@paragraph</p>
        }
    </div>
</div>