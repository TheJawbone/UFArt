@model ContactViewModel

<div class="p-3">
    <form method="post" asp-controller="ContactEditor" asp-action="UploadAsync">
        <div class="form-group">
            <label asp-for="Email">@Model.TextRepository.GetTranslatedValue("email_address", Context)</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Telephone">@Model.TextRepository.GetTranslatedValue("telephone_number", Context)</label>
            <input asp-for="Telephone" class="form-control" />
        </div>
        <div class="text-center">
            <input type="submit" class="btn btn-primary" value="@Model.TextRepository.GetTranslatedValue("save", Context)" />
        </div>
    </form>
</div>