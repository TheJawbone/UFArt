@model ArtPieceCreationViewModel

<div asp-validation-summary="All" class="text-danger"></div>

<form id="form" method="post" enctype="multipart/form-data" asp-controller="GalleryEditor" asp-action="UploadAsync">
    <div class="form-group">
        <label asp-for="ArtPiece.Name">Nazwa/tytuł</label>
        <input asp-for="ArtPiece.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ArtPiece.Description">Opis</label>
        <input asp-for="ArtPiece.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ArtPiece.Dimensions">Wymiary/format</label>
        <input asp-for="ArtPiece.Dimensions" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ArtPiece.Technique">Technika<span class="text-danger font-weight-bold">*</span></label>
        <select asp-for="ArtPiece.Technique"
                asp-items="@(new SelectList(Model.Techniques()))"
                class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="ArtPiece.CreationDate">Data powstania</label>
        <input asp-for="ArtPiece.CreationDate" placeholder="rrrr lub mm-rrrr" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ArtPiece.AdditionalInfo">Dodatkowe informacje</label>
        <textarea asp-for="ArtPiece.AdditionalInfo" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ArtPiece.ForSale">Dostępny na sprzedaż<span class="text-danger font-weight-bold">*</span></label>
        <input asp-for="ArtPiece.ForSale" />
    </div>
    <div class="form-group">
        @if (Model.ArtPiece?.ImageUri != null)
        {<label>Wybierz nowe zdjęcie <b>(pomiń, jeśli chcesz zostawić istniejące)</b><span class="text-danger font-weight-bold">*</span></label> }
        else
        { <label>Wybierz zdjęcie<span class="text-danger font-weight-bold">*</span></label>}
        <input type="file" class="btn" id="file" name="files" accept="image" />
    </div>
    @if (Model.ArtPiece != null)
    {
        <input asp-for="ArtPiece.ImageUri" type="hidden" value="@Model.ArtPiece.ImageUri" />
        <input asp-for="ArtPiece.ID" type="hidden" value="@Model.ArtPiece.ID" />
    }
    <div class="text-center">
        <input type="submit" class="btn btn-primary" value="Zatwierdź" />
        <a asp-controller="GalleryEditor" asp-action="ManageGallery" class="btn btn-secondary">Anuluj</a>
    </div>
</form>