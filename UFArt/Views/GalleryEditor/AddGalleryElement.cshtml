@model ArtPieceCreationViewModel

<div class="p-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form id="form" method="post" enctype="multipart/form-data" asp-controller="GalleryEditor" asp-action="UploadAsync">
        <div class="form-group">
            <label asp-for="ArtPiece.Name">@Model.TextRepository.GetTranslatedValue("name", Context)</label>
            <input asp-for="ArtPiece.Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ArtPiece.Description">@Model.TextRepository.GetTranslatedValue("description", Context)</label>
            <input asp-for="ArtPiece.Description" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ArtPiece.Dimensions">@Model.TextRepository.GetTranslatedValue("dimensions", Context)</label>
            <input asp-for="ArtPiece.Dimensions" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ArtPiece.Technique">@Model.TextRepository.GetTranslatedValue("technique", Context)<span class="text-danger font-weight-bold">*</span></label>
            <select asp-for="ArtPiece.Technique"
                    asp-items="@(new SelectList(Model.Techniques()))"
                    class="form-control"></select>
        </div>
        <div class="form-group">
            <label asp-for="ArtPiece.CreationDate">@Model.TextRepository.GetTranslatedValue("creation_date", Context)</label>
            <input asp-for="ArtPiece.CreationDate" placeholder="rrrr lub mm-rrrr" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ArtPiece.AdditionalInfo">@Model.TextRepository.GetTranslatedValue("additional_info", Context)</label>
            <textarea asp-for="ArtPiece.AdditionalInfo" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="ArtPiece.ForSale">@Model.TextRepository.GetTranslatedValue("for_sale", Context)<span class="text-danger font-weight-bold">*</span></label>
            <input asp-for="ArtPiece.ForSale" />
        </div>
        <div class="form-group">
            @if (Model.ArtPiece?.ImageUri != null)
            {<label>@Model.TextRepository.GetTranslatedValue("choose_photo", Context)<b>(@Model.TextRepository.GetTranslatedValue("skip_to_keep", Context))</b><span class="text-danger font-weight-bold">*</span></label> }
            else
            { <label>@Model.TextRepository.GetTranslatedValue("choose_photo", Context)<span class="text-danger font-weight-bold">*</span></label>}
            <input type="file" class="btn" id="file" name="files" accept="image" />
        </div>
        @if (Model.ArtPiece != null)
        {
            <input asp-for="ArtPiece.ImageUri" type="hidden" value="@Model.ArtPiece.ImageUri" />
            <input asp-for="ArtPiece.ID" type="hidden" value="@Model.ArtPiece.ID" />
        }
        <div class="text-center">
            <input type="submit" class="btn btn-primary" value="@Model.TextRepository.GetTranslatedValue("create", Context)" />
            <a asp-controller="GalleryEditor" asp-action="ManageGallery" class="btn btn-secondary">@Model.TextRepository.GetTranslatedValue("cancel", Context)</a>
        </div>
    </form>
</div>