<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="~/css/vendor.min.css" />
    <link rel="stylesheet" asp-href-include="~/css/style.css" />
    <link rel="stylesheet" asp-href-include="~/css/dropdown.css" />
    <title>Urszula Figiel Art</title>
</head>
<body>
    <div class="navbar-fixed-top navbar-light navbar-expand-md navbar-collapse bg-light" role="navigation">
        <div class="navbar-nav">

            <!--BRAND-->
            <a class="navbar-brand"
               asp-controller="Home"
               asp-action="Index">Urszula Figiel Art</a>
            
            <!--NAV LINKS-->
            <ul class="list-inline">

                <!--NEWS-->
                <li class="list-inline-item">
                    <a class="nav-link"
                       asp-controller="Newsfeed"
                       asp-action="Index">Aktualności</a>
                </li>

                <!--GALLERY DROPDOWN-->
                <li class="list-inline-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Galeria
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <li>
                            <a class="dropdown-item dropdown-toggle" href="#">Obrazy</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Gallery"
                                       asp-action="List"
                                       asp-route-techniqueCodeName="OP"
                                       asp-route-pageNumber="1">Olej na płótnie</a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Gallery"
                                       asp-action="List"
                                       asp-route-techniqueCodeName="WP"
                                       asp-route-pageNumber="1">Akwarele</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="dropdown-item"
                               asp-controller="Gallery"
                               asp-action="List"
                               asp-route-techniqueCodeName="PO"
                               asp-route-pageNumber="1">Ceramika</a>
                        </li>
                    </ul>
                </li>

                <!--ABOUT-->
                <li class="list-inline-item">
                    <a class="nav-link"
                       asp-controller="About"
                       asp-action="Index">O autorce</a>
                </li>

                <!--CONTACT-->
                <li class="list-inline-item">
                    <a class="nav-link"
                       asp-controller="Contact"
                       asp-action="Index">Kontakt</a>
                </li>

                <!--EDITOR DROPDOWN-->
                <li class="list-inline-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Edytor
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <li>
                            <a class="dropdown-item"
                               asp-controller="GalleryEditor"
                               asp-action="AddGalleryElement">Dodaj pracę do galerii</a>
                        </li>
                        <li>
                            <a class="dropdown-item"
                               asp-controller="GalleryEditor"
                               asp-action="AddNews">Dodaj wpis aktualności</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/vendor.min.js"></script>
    <script src="~/js/dropdown.js"></script>
</body>
</html>
