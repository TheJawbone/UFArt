@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/css?family=Shadows+Into+Light" rel="stylesheet">
    <link rel="stylesheet" asp-href-include="~/css/vendor.min.css" />
    <link rel="stylesheet" asp-href-include="~/css/style.css" />
    <link rel="stylesheet" asp-href-include="~/css/dropdown.css" />
    <title>Urszula Figiel Art</title>
</head>
<body class="bg-light h-100">
    <div id="carouselExampleControls" class="carousel slide h-100" data-interval="10000" data-ride="carousel" style="background-size: cover;">
        <div class="carousel-inner h-100" generate-slides></div>
        <div class="d-opaque-white-bg h-100"></div>
        <div class="entry-text">
            <h1>Urszula Figiel <span class="text-primary">Art</span></h1>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    @switch (Context.Session.GetString("language"))
    {
        case "pl":
            <a href="/About" class="btn btn-primary entry-button">Przejdź do strony</a>
            break;
        case "en":
            <a href="/About" class="btn btn-primary entry-button">Enter website</a>
            break;
        default:
            <a href="/About" class="btn btn-primary entry-button">Przejdź do strony</a>
            break;
    }
    <div class="home-language-controls text-center">
        <div class="d-inline-block mr-4">
            <form method="post" class="flag-icon" asp-controller="Home" asp-action="SetLanguageToPl">
                <input type="hidden" id="returnUri" name="returnUri" value="@Context.Request.PathAndQuery()" />
                <input type="submit" class="btn btn-primary home-language-control" value="PL" />
            </form>
        </div>
        <div class="d-inline-block ml-4">
            <form method="post" class="flag-icon" asp-controller="Home" asp-action="SetLanguageToEn">
                <input type="hidden" id="returnUri" name="returnUri" value="@Context.Request.PathAndQuery()" />
                <input type="submit" class="btn btn-primary home-language-control" value="EN" />
            </form>
        </div>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/vendor.min.js"></script>
    <script src="~/js/dropdown.js"></script>
</body>
</html>