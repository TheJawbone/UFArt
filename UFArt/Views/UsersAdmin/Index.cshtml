@model IEnumerable<User>

<div class="p-3">
    <table class="table table-sm table-bordered">
        <tr><th>ID</th><th>Nazwa</th><th>Email</th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="3" class="text-center">Brak kont użytkowników</td></tr>
        }
        else
        {
            foreach (User user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="EditUser"
                               asp-route-id="@user.Id">Edytuj</a>
                            <button type="submit" class="btn btn-sm btn-danger">Usuń</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
    <div class="text-center"><a class="btn btn-primary" asp-action="CreateUser">Dodaj użytkownika</a></div>
</div>