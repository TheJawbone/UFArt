@model RoleEditModel

<div class="bg-primary m-1 p-1 text-white"><h4>Edytuj rolę</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Edit" method="post">
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />
    <h6 class="bg-info p-1 text-white">Dodaj do grupy @Model.Role.Name</h6>
    <table class="table table-bordered table-sm">
        @if (Model.NonMembers.Count() == 0)
        {
            <tr><td colspan="2">Wszyscy użytkownicy są członkami tej grupy</td></tr>
        }
        else
        {
            @foreach (User user in Model.NonMembers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="IdsToAdd" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>
    <h6 class="bg-info p-1 text-white">Usuń z grupy @Model.Role.Name</h6>
    <table class="table table-bordered table-sm">
        @if (Model.Members.Count() == 0)
        {
            <tr><td colspan="2">Żaden użytkownik nie jest członkiem tej grupy</td></tr>
        }
        else
        {
            @foreach (User user in Model.Members)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="IdsToDelete" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>
    <button type="submit" class="btn btn-primary">Zatwierdź</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>