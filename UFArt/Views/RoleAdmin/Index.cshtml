@model IEnumerable<IdentityRole>

<div class="p-3">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <table class="table table-sm table-bordered table-bordered">
        <tr><th>ID</th><th>Nazwa</th><th>Użytkownicy</th><th></th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">Brak ról</td></tr>
        }
        else
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td identity-role="@role.Id"></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit"
                               asp-route-id="@role.Id">Edytuj</a>
                            <button type="submit"
                                    class="btn btn-sm btn-danger">
                                Usuń
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
    <a class="btn btn-primary" asp-action="Create">Stwórz</a>
</div>