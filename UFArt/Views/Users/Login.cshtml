@model UserLoginModel

<div class="p-3">
    <div class="text-danger" asp-validation-summary="All"></div>
    <form asp-action="Login" method="post">
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
        <div class="form-group">
            <label asp-for="Email">@Model.TextRepository.GetTranslatedValue("layout_email", Context)</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password">@Model.TextRepository.GetTranslatedValue("layout_password", Context)</label>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">@Model.TextRepository.GetTranslatedValue("layout_login", Context)</button>
        </div>
    </form>
</div>