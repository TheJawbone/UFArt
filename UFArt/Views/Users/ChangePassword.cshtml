@model ChangePasswordViewModel

<div class="p-3">
    <p class="font-weight-bold">@Model.TextRepository.GetTranslatedValue("logout_after_password_change", Context)</p>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post" asp-controller="Users" asp-action="ChangePasswordPost">
        <div class="form-group">
            <label asp-for="OldPassword" type="password">@Model.TextRepository.GetTranslatedValue("old_password", Context)</label>
            <input asp-for="OldPassword" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" type="password">@Model.TextRepository.GetTranslatedValue("new_password", Context)</label>
            <input asp-for="NewPassword" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NewPasswordConfirmed" type="password">@Model.TextRepository.GetTranslatedValue("new_password_confirm", Context)</label>
            <input asp-for="NewPasswordConfirmed" class="form-control" />
        </div>
        <input asp-for="Id" type="hidden" value="@Model.Id" />
        <div class="text-center">
            <input type="submit" class="btn btn-primary" value="@Model.TextRepository.GetTranslatedValue("save", Context)" />
            <a asp-controller="Users" asp-action="AccountOverview" class="btn btn-secondary">@Model.TextRepository.GetTranslatedValue("cancel", Context)</a>
        </div>
    </form>
</div>