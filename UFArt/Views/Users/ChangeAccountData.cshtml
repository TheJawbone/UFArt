@model ChangeAccountDataViewModel

<div class="p-3">
    <form method="post" asp-controller="Users" asp-action="ChangeAccountData">
        <div class="form-group">
            <label>@Model.TextRepository.GetTranslatedValue("email_address", Context)</label>
            <input type="text" class="form-control" value="@Model.Email" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Username">@Model.TextRepository.GetTranslatedValue("username", Context)</label>
            <input asp-for="Username" class="form-control" value="@Model.Username" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">@Model.TextRepository.GetTranslatedValue("telephone_number", Context)</label>
            <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
        </div>
        <input asp-for="Id" type="hidden" value="@Model.Id" />
        <div class="text-center">
            <input type="submit" class="btn btn-primary" value="@Model.TextRepository.GetTranslatedValue("save", Context)" />
            <a asp-controller="Users" asp-action="AccountOverview" class="btn btn-secondary">@Model.TextRepository.GetTranslatedValue("cancel", Context)</a>
        </div>
    </form>
</div>